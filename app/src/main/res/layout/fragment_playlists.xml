<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media_library_playlists"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".mediaLibrary.ui.playlist.PlaylistFragment">

    <Button
        android:id="@+id/media_library_button_add_new_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:backgroundTint="?attr/colorOnSecondary"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/media_library_button_add_new_playlist"
        android:textColor="?attr/colorSecondary"
        android:textFontWeight="500"
        android:textSize="@dimen/media_library_tab_layout_text_size_14sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/playlist_placeholder_no_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="46dp"
        android:drawableTop="@drawable/ic_not_found"
        android:drawablePadding="16dp"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center_horizontal"
        android:text="@string/media_library_playlists_empty"
        android:textAlignment="center"
        android:textColor="?attr/colorOnPrimary"
        android:textFontWeight="400"
        android:textSize="19sp" />

    <ProgressBar
        android:id="@+id/playlist_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlist_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"

        />
</LinearLayout>

