<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media_library"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    tools:context=".mediaLibrary.ui.MediaLibraryFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/media_library_header"
        style="@style/HeaderStyle"

        app:title="@string/media_library_text_header"

        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/media_library_tab_layout_text_size_14sp"
        app:fontFamily ="@font/ys_display_medium"
        app:textAllCaps = "false"
        android:background="?attr/colorPrimary"
        app:tabIndicatorColor="?attr/colorOnSecondary"
        app:tabIndicatorHeight="2dp"
        app:tabIndicatorFullWidth="true"
        app:tabTextColor="?attr/colorOnSecondary"

        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>