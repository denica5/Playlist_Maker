<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/settings_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="16dp"
            android:paddingBottom="20dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/text_button_color"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_medium"
        android:paddingStart="@dimen/settings_start_padding_16dp"
        android:paddingTop="14dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:text="@string/header_settings"
        android:textColor="@color/text_button_color"
        android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/settings_start_padding_16dp"
            android:paddingTop="21dp"
            android:paddingEnd="16dp"
            android:paddingBottom="21dp"

            android:text="@string/dark_theme"
            android:textColor="@color/text_button_color"
            android:textSize="16sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:checked="false"
            android:paddingStart="18dp"
            android:paddingTop="21dp"
            android:paddingEnd="18dp"
            android:paddingBottom="22dp"
            app:thumbTint="@color/settings_switch_thumb_color"
            app:trackTint="@color/settings_switch_track_color"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/settings_start_padding_16dp"
            android:paddingTop="22dp"
            android:paddingEnd="16dp"
            android:paddingBottom="21dp"
            android:text="@string/share_app"
            android:textColor="@color/text_button_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:checked="false"
            android:paddingStart="16dp"
            android:paddingTop="22dp"
            android:paddingEnd="16dp"
            android:paddingBottom="22dp"
            android:src="@drawable/ic_share"
           app:tint="@color/settings_icon_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/settings_start_padding_16dp"
            android:paddingTop="21dp"
            android:paddingEnd="16dp"
            android:paddingBottom="21dp"
            android:text="@string/write_support"
            android:textColor="@color/text_button_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="14dp"
            android:paddingTop="22dp"
            android:paddingEnd="14dp"
            android:paddingBottom="21dp"
            android:src="@drawable/ic_support"
           app:tint="@color/settings_icon_color"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/settings_start_padding_16dp"
            android:paddingTop="21dp"
            android:paddingEnd="16dp"
            android:paddingBottom="21dp"
            android:text="@string/user_agreement"
            android:textColor="@color/text_button_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:checked="false"
            android:paddingStart="20dp"
            android:paddingTop="24dp"
            android:paddingEnd="20dp"
            android:paddingBottom="23dp"
            android:src="@drawable/ic_arrow_forward"
           app:tint="@color/settings_icon_color"
            />

    </LinearLayout>
</LinearLayout>

