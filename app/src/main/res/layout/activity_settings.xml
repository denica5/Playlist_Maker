<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    style="@style/SettingsLayout"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/settings_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/header_settings" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/dark_theme_switch"
        style="@style/SettingsCategoryStyle"
        android:text="@string/dark_theme"
        app:thumbTint="@color/switch_thumb_color"
        app:trackTint="@color/switch_track_color" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/share_app_category"
        style="@style/SettingsCategoryStyle"
        android:text="@string/share_app"
        android:drawableEnd="@drawable/ic_share"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/write_support_category"
        style="@style/SettingsCategoryStyle"
        android:drawableEnd="@drawable/ic_support"
        android:text="@string/write_support"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_agreement_category"
        style="@style/SettingsCategoryStyle"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:text="@string/user_agreement"
         />
</LinearLayout>

