<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainTextHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingStart">@dimen/main_start_margin_16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingEnd">@dimen/main_end_margin_16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/main_start_margin_16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">@dimen/main_end_margin_16dp</item>
        <item name="android:layout_marginBottom">@dimen/main_bottom_padding_8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:backgroundTint">@color/white_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text_button_color</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_10dp</item>
        <item name="iconTint">@color/text_button_color</item>
    </style>

    <style name="SettingsHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/settings_start_padding_16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="SettingsBackArrowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="SettingsCategoryTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">@dimen/settings_start_padding_16dp</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">21dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_text_16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="SettingsCategoryIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="SettingsCategoryLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DarkThemeSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:checked">true</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>


</resources>