<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainTextHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingStart">@dimen/main_start_margin_16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingEnd">@dimen/main_end_margin_16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/main_start_margin_16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">@dimen/main_end_margin_16dp</item>
        <item name="android:layout_marginBottom">@dimen/main_bottom_padding_8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:backgroundTint">@color/white_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text_button_color</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_10dp</item>
        <item name="iconTint">@color/text_button_color</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="navigationIconTint">@color/black</item>
    </style>


    <style name="SettingsCategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textColor">@color/text_button_color</item>
        <item name="android:textSize">@dimen/settings_text_16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="drawableTint">@color/settings_icon_color</item>

    </style>


    <style name="SearchEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_rounded_corner</item>
        <item name="android:drawableStart">@drawable/ic_search_search_layout</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:backgroundTint">@color/edit_text_background_color</item>
        <item name="android:drawableTint">@color/edit_text_hint_color</item>
        <item name="android:paddingTop">8.5dp</item>
        <item name="android:paddingBottom">8.5dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start</item>
        <item name="android:hint">@string/search_hint_edit_text</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/settings_text_16sp</item>
    </style>

    <style name="SearchClearIcXStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:src">@drawable/ic_cancel_x</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:tint">@color/settings_icon_color</item>
    </style>

    <style name="MediaPlayerTextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/edit_text_hint_color</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintWidth_max">120dp</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="MediaPlayerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintWidth_max">220dp</item>
        <item name="layout_constraintHorizontal_bias">1</item>
    </style>

    <style name="BottomNavigationBarActiveTextStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="BottomNavigationBarInactiveTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>


    <style name="TextInputLayoutHintTextAppearance" parent="">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="fontWeight">400</item>


    </style>

    <style name="TextInputLayoutTextAppearance" parent="">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="TextOverflowMenuBottomSheetPlaylistDetail">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
        <item name="android:layout_marginVertical">21dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="AlertTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="android:background">@drawable/alert_dialog_background</item>
        <item name="shapeAppearance">@style/RoundShapeAppearance</item>
    </style>
    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

</resources>